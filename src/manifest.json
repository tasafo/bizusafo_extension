{
  "manifest_version": 2,

  "name": "BizuSafo",
  "description": "Compartilhe links no BizuSafo com um clique!",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "19": "./images/icon19.png",
      "32": "./images/icon38.png",
      "64": "./images/icon76.png"
    },
    "default_title": "BizuSafo!",
    "default_popup": "index.html"
  },

  "permissions": [
    "*://*/*",
    "storage",
    "tabs"
  ]
}
